{
  "manifest_version": 3,
  "name": "AA Job Tracker with realtime analysis",
  "version": "3.0",
  "description": "Helps users analyse resumes and save records",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.example.com/*",
        "*://*.seek.com.au/job/*",
        "*://*.linkedin.com/jobs/*"
      ],
      "js": ["assets/content.js"]
    }
  ]
}
