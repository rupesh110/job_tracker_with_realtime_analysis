    "vite": "^7.0.6",
    "vite-plugin-copy": "^0.1.6",
    "vite-plugin-static-copy": "^3.1.1"
  },
  "dependencies": {
    "docx": "^9.5.1",
    "file-saver": "^2.0.5",
    "idb": "^8.0.3",
    "lucide-react": "^0.542.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^2.16.105",
    "quill": "^2.0.3"
  }
