{
  "manifest_version": 3,
  "name": "Job Tracker with realtime analysis",
  "version": "3.1",
  "description": "Helps users analyse resumes and save records",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.example.com/*",
        "*://*.seek.com.au/*",
        "*://*.seek.com.au/job/*",
        "*://*.linkedin.com/jobs/*"
      ],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
